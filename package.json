{
	"name": "logbook",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "bun run test:unit -- --run",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"db:seed:test-logs": "bun run scripts/seed-test-logs.ts",
		"shadcn": "bunx shadcn-svelte@latest",
		"auth": "bunx @better-auth/cli",
		"auth:generate": "bunx @better-auth/cli generate --output src/lib/server/db/schema/auth.ts"
	},
	"dependencies": {
		"@internationalized/date": "3.11.0",
		"@js-temporal/polyfill": "0.5.1",
		"@lucide/svelte": "^0.575.0",
		"@libsql/client": "0.17.0",
		"better-auth": "1.4.19",
		"bits-ui": "2.16.1",
		"clsx": "2.1.1",
		"nanoid": "5.1.6",
		"zod": "4.3.6",
		"drizzle-orm": "1.0.0-beta.15-859cf75",
		"mode-watcher": "1.1.0",
		"svelte-sonner": "1.0.7",
		"tailwind-merge": "3.5.0",
		"tailwind-variants": "3.2.2"
	},
	"devDependencies": {
		"@eslint/compat": "2.0.2",
		"@eslint/js": "10.0.1",
		"@sveltejs/adapter-auto": "7.0.1",
		"@sveltejs/kit": "2.53.3",
		"@sveltejs/vite-plugin-svelte": "6.2.4",
		"@tailwindcss/vite": "4.2.1",
		"@vitest/browser-playwright": "4.0.18",
		"drizzle-kit": "1.0.0-beta.15-859cf75",
		"drizzle-seed": "1.0.0-beta.15-859cf75",
		"eslint": "10.0.2",
		"eslint-config-prettier": "10.1.8",
		"eslint-plugin-svelte": "3.15.0",
		"globals": "17.3.0",
		"playwright": "1.58.2",
		"prettier": "3.8.1",
		"prettier-plugin-svelte": "3.5.0",
		"prettier-plugin-tailwindcss": "0.7.2",
		"svelte": "5.53.1",
		"svelte-check": "4.4.3",
		"tailwindcss": "4.2.1",
		"tw-animate-css": "1.4.0",
		"typescript": "5.9.3",
		"typescript-eslint": "8.56.1",
		"vite": "7.3.1",
		"vite-plugin-devtools-json": "1.0.0",
		"vitest": "4.0.18",
		"vitest-browser-svelte": "2.0.2"
	},
	"trustedDependencies": [
		"esbuild"
	]
}
