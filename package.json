{
	"name": "logbook",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "bun run test:unit -- --run",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"shadcn": "bunx shadcn-svelte@latest",
		"auth": "bunx @better-auth/cli",
		"auth:generate": "bunx @better-auth/cli generate --output src/lib/server/db/schema/auth.ts"
	},
	"devDependencies": {
		"@eslint/compat": "2.0.0",
		"@eslint/js": "9.39.2",
		"@internationalized/date": "3.10.1",
		"@lucide/svelte": "0.562.0",
		"@sveltejs/adapter-auto": "7.0.0",
		"@sveltejs/kit": "2.49.2",
		"@sveltejs/vite-plugin-svelte": "6.2.1",
		"@tailwindcss/vite": "4.1.18",
		"@vitest/browser-playwright": "4.0.16",
		"bits-ui": "2.14.4",
		"clsx": "2.1.1",
		"drizzle-kit": "^1.0.0-beta.8-734e789",
		"drizzle-orm": "^1.0.0-beta.8-734e789",
		"drizzle-seed": "^1.0.0-beta.8-734e789",
		"eslint": "9.39.2",
		"eslint-config-prettier": "10.1.8",
		"eslint-plugin-svelte": "3.13.1",
		"globals": "17.0.0",
		"mode-watcher": "1.1.0",
		"playwright": "1.57.0",
		"prettier": "3.7.4",
		"prettier-plugin-svelte": "3.4.1",
		"prettier-plugin-tailwindcss": "0.7.2",
		"svelte": "5.46.0",
		"svelte-check": "4.3.5",
		"svelte-sonner": "1.0.7",
		"tailwind-merge": "3.4.0",
		"tailwind-variants": "3.2.2",
		"tailwindcss": "4.1.18",
		"tw-animate-css": "1.4.0",
		"typescript": "5.9.3",
		"typescript-eslint": "8.50.1",
		"vite": "7.2.4",
		"vite-plugin-devtools-json": "1.0.0",
		"vitest": "4.0.16",
		"vitest-browser-svelte": "2.0.1"
	},
	"dependencies": {
		"@libsql/client": "0.15.15",
		"better-auth": "1.4.9",
		"nanoid": "5.1.6",
		"zod": "4.2.1"
	},
	"trustedDependencies": [
		"esbuild"
	]
}
